<!-- Primer Carrousel de la pagina principal -->
<style>
    .swiper {
        width: 100%;
        height: 100vh;
    }

    .swiper-slide {
        text-align: center;
        font-size: 18px;
        background: #fff;
        display: flex;
        justify-content: center;
        align-items: center;
        background-image: url(/model-s.webp);
    }

    .swiper-slide img {
        display: block;
        width: 100%;
        height: 100%;
        object-fit: cover;
        position: absolute; /* Cambia esta línea */
        top: 0; /* Agrega esta línea */
        left: 0; /* Agrega esta línea */
        z-index: 1; /* Cambia esta línea */
    }

    .swiper-slide a {
        display: block;
        width: 100%;
        height: 100%;
        object-fit: cover;
        position: relative; /* Cambia esta línea */
        z-index: 2; /* Cambia esta línea */
    }

    .swiper {
        margin-left: auto;
        margin-right: auto;
    }
</style>
<!-- El cual muestra los best sellers de cada marca con la que colaboramos -->
<div class="hidden sm:block">
    <div class="swiper" id="swiper-Carousel">
        <div class="swiper-wrapper">
            <div class="swiper-slide"><img alt="tesla model-s" src="/model-s.webp"><a href="/product/tesla"></a></div>
            <div class="swiper-slide"><img alt="mclaren 720s" src="/mclaren-blanco.jpg"><a href="/product/mclaren"></a></div>
            <div class="swiper-slide"><img alt="chevrolet camaro" src="/chevrolet-camaro.jpg"><a href="/product/camaro"></a></div>
            <div class="swiper-slide"><img alt="Lamborghini Huracan" src="/lamborghini-huracan.jpg"><a href="/product/huracan"></a></div>
        </div>
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-pagination"></div>
        <div>
    </div>
</div>


<script>
    // Al igual que con el resto de galerías, usamos Swiper
    import Swiper from 'swiper';
    import {Navigation, Pagination, Autoplay} from 'swiper/modules';
    import 'swiper/css';
    import 'swiper/css/navigation';
    import 'swiper/css/pagination';

    new Swiper(`#swiper-Carousel`, {
        modules: [Navigation, Pagination, Autoplay],
        slidesPerView: 1,
        loop: true,
        pagination: {
            el: `#swiper-Carousel > .swiper-pagination`,
            clickable: true,
        },
        autoplay: {
            delay: 1000,
            disableOnInteraction: false,
        },
        navigation: {
            nextEl: `#swiper-Carousel > .swiper-button-next`,
            prevEl: `#swiper-Carousel > .swiper-button-prev`,
        },
    });
</script>
